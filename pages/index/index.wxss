/**index.wxss**/
.banner{
  display: block;
  box-sizing: border-box;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  width: 100%;
}

.slide-img {
  width: 100%;
}

.scroll-view {
  width: 96%;
  height: 100%;
}

.sub-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 200rpx;
  margin-bottom: 5rpx;
  border-bottom: 1rpx solid #ccc;
}

.item-left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 60%;
  margin: 2rpx;
}

.item-left-up {
  font-size: 30rpx;
  font-family: Microsoft YaHei;
}

.item-left-bottom {
  font-size: 10rpx;
  font-family: Microsoft YaHei;
  color: #ccc;
  margin-bottom: 5rpx;
}

.small-img {
  width: 40%;
  height: 98%;
  margin: 2rpx;
}